    {
      "idRef": {
        "id": "9ca7834b8ac0f5b2a27e1589"
      },
      "index": 2,
      "text": "Wait... water bed in an armored vehicle... no wonder you've been banned, you have your own personal Canopian [[DM.BaseDescriptionDefs[LoreCanopianPleasureRide],pleasure ride]]?!?! \n\nYou're a true [[DM.BaseDescriptionDefs[LoreOtaku],otaku]], aren't you [[DM.BaseDescriptionDefs[LoreBobKurita],Bob]]?",
      "branches": [
        {
          "responseText": "",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 3,
          "hideIfUnavailable": true,
          "onlyOnce": false,
          "idRef": {
            "id": "9c06a547d992257c398a02d0"
          },
