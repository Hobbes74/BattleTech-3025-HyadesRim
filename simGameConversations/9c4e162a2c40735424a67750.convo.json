    {
      "idRef": {
        "id": "9c46fd9a938028c3392984a7"
      },
      "index": 11,
      "text": "Oh... this is interesting. The astro-navigational hazard caused by the debris has caused changes to local [[DM.BaseDescriptionDefs[LoreDropShip],DropShip]] traffic. \n\nDiscarding normal traffic from the main population centers, I've tracked unknown spaceships to a couple of locations on this world near the equatorial area.",
      "branches": [
        {
          "responseText": "Is that what we're looking for, Dr. Murad?",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 12,
          "hideIfUnavailable": true,
          "onlyOnce": false,
          "idRef": {
            "id": "9c8e7b0fa9d1708a6a95d0e1"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        }
      ],
      "nodeType": 1,
      "truthValue": false,
      "autoFollowBranchDelay": 1,
      "inputMaxLength": 0,
      "sourceTopicRef": null,
      "subjectTopicRefs": [],
      "sourceInSceneRef": null,
      "sourceWithTagInScene": "",
      "override_speaker": null,
      "speaker_override_id": "598cd3a06230355c18000067",
      "actions": null,
      "comment": ""
