      "speaker_override_id": "598cd3a06230355c18000067",
      "actions": null,
      "comment": ""
    },
    {
      "idRef": {
        "id": "9c10487c25e4413d7dbe4305"
      },
      "index": 4,
      "text": "Enough. I don't have to explain to you my actions, the same way that your [[DM.BaseDescriptionDefs[LoreSpheroid],Spheroid]] employers only give you the information needed for you to fight and die. \n\nNow that I've gotten to you first, instead of the Harbingers getting to you or me, I'm ready to assume your contract's terms if you continue fighting for me.",
      "branches": [
        {
          "responseText": "",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 5,
          "hideIfUnavailable": true,
          "onlyOnce": false,
          "idRef": {
            "id": "9cb33c09870c7a12305eda1f"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        }
      ],
      "nodeType": 1,
      "truthValue": false,
      "autoFollowBranchDelay": 1,
      "inputMaxLength": 0,
      "sourceTopicRef": null,
      "subjectTopicRefs": [],
