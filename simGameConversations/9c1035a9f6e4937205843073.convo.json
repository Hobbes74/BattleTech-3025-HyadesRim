    {
      "idRef": {
        "id": "9c98f9d4bb4f13627bdd47bc"
      },
      "index": 7,
      "text": "Have you forgotten that I am still holding the guns here, Commander?",
      "branches": [
        {
          "responseText": "Blow up the <i>Hysteria</i> and you can't use us anymore for whatever you want.",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 8,
          "hideIfUnavailable": true,
          "onlyOnce": false,
