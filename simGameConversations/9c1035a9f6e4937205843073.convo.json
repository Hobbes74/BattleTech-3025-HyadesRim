    {
      "idRef": {
        "id": "9c639eecd3b23fbe2ca2d896"
      },
      "index": 10,
      "text": "That <i>Archer</i> was a personal gift. The <i>Vulcan</i> is all I have to offer. \n\nDo we have a deal? Or should I blow up your [[DM.BaseDescriptionDefs[LoreLeopard],Leopard]] since you're of no use to me anymore?",
      "branches": [
        {
          "responseText": "",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 11,
          "hideIfUnavailable": true,
          "onlyOnce": false,
          "idRef": {
            "id": "9c067fcc9dcc6974b671512d"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        }
      ],
      "nodeType": 1,
      "truthValue": false,
      "autoFollowBranchDelay": 1,
      "inputMaxLength": 0,
      "sourceTopicRef": null,
      "subjectTopicRefs": [],
      "sourceInSceneRef": {
