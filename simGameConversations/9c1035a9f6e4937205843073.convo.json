    {
      "idRef": {
        "id": "9c27888324ba2baf0ca67d6f"
      },
      "index": 13,
      "text": "One day you'll regret not following your crew's advice, Commander. \n\nBut not today.",
      "branches": [
        {
          "responseText": "Would you risk your own life on this mission again?",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 14,
          "hideIfUnavailable": true,
          "onlyOnce": false,
          "idRef": {
            "id": "9c01b63d16cb99abcde40aab"
          },
